# SENTINEL-HEALTH Module 3: Food Security & Dependency Management
# Environment Configuration

# Application
APP_NAME="SENTINEL-HEALTH Module 3: Food Security"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# API
API_PREFIX=/api/v1
API_HOST=0.0.0.0
API_PORT=8003

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/sentinel_food_security
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/3
CACHE_TTL=3600

# External APIs
WEATHER_API_KEY=your_weather_api_key_here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_MAPS_BASE_URL=https://maps.googleapis.com/maps/api

SATELLITE_API_KEY=your_satellite_api_key_here
SATELLITE_API_URL=https://api.sentinel-hub.com

# Alert Thresholds
SHORTAGE_WARNING_DAYS=30
SHORTAGE_IMMINENT_DAYS=15
SHORTAGE_CRITICAL_DAYS=7

# Prediction Settings
FORECAST_HORIZON_DAYS=90
PRODUCTION_FORECAST_UPDATE_HOURS=24

# Module Integration
MODULE1_URL=http://localhost:8001
MODULE2_URL=http://localhost:8002
